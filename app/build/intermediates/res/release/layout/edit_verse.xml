<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/spring_green">

    <LinearLayout
        android:id="@+id/button_save_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/button_save"
            android:text="@string/button_save"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_dark"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_save_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_verse_name"
                android:text="@string/textview_verse_name"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black">
             </View>

            <EditText
                android:id="@+id/edittext_enter_name"
                android:hint="@string/edittext_enter_name"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@drawable/cursor"
                android:textColor="@color/black"
                android:textColorHint="@color/material_grey_600"
                android:background="@drawable/edittext_border"/>

            <TextView
                android:id="@+id/textview_verse_text"
                android:text="@string/textview_verse_text"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black">
            </View>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edittext_enter_text"
                    android:hint="@string/edittext_enter_text"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textColor="@color/black"
                    android:textColorHint="@color/material_grey_600"
                    android:background="@drawable/edittext_border"/>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout><!-- From: file:/D:/dev/Android/MyApplication/app/src/main/res/layout/edit_verse.xml -->