<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_verseview"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:scrollbars="horizontal|vertical"
              android:background="@color/spring_green">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/textview_verse_view_name"
            android:id="@+id/verse_name_verse_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/textview_verse_view_text"
                android:id="@+id/verse_text_verse_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"/>

        </HorizontalScrollView>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black">
        </View>

       <LinearLayout

           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:includeFontPadding="true"
               android:paddingLeft="10dp"
               android:text="@string/textview_verse_view_author"
               android:gravity="left"
               android:id="@+id/verse_author_verse_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.5"
               android:textSize="18sp"
               android:textStyle="bold"
               android:textColor="@color/black"/>


           <TextView
               android:includeFontPadding="@bool/abc_action_bar_embed_tabs"
               android:paddingRight="10dp"
               android:text="@string/textview_verse_view_date"
               android:gravity="right"
               android:id="@+id/verse_date_verse_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.5"
               android:textSize="18sp"
               android:textStyle="bold"
               android:textColor="@color/black"/>


       </LinearLayout>

    </LinearLayout>

</ScrollView><!-- From: file:/D:/dev/Android/PoetNotebook/app/src/main/res/layout/verse_view.xml -->