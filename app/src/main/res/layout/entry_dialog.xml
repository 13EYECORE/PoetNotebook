<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_entry"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/layout_dark_with_corners"
              android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textview_introduce"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="@string/textview_introduce_yourself"/>

        <TextView
            android:gravity="center"
            android:id="@+id/textview_author_name"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="@string/textview_author_name"/>

        <EditText
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/edittext_enter_author_name"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/black"
            android:background="@drawable/edittext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent_color">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/textview_author_surname"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="@string/textview_author_surname"/>

        <EditText
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/edittext_enter_author_surname"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/black"
            android:background="@drawable/edittext"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_continue"
                android:text="@string/button_continue"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"/>


        </LinearLayout>


    </LinearLayout>

</ScrollView>