<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_mainmenu"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/bright_green"
    android:scrollbars="none">

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview_author"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:paddingRight="0dp"/>



                <TextView
                    android:id="@+id/textview_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:paddingRight="0dp"
                    android:hint="@string/author_dialog_hint"
                    android:textColorHint="@color/black"/>

            </LinearLayout>


            <TextView
                android:id="@+id/textview_author_edit"
                android:textSize="30sp"
                android:text="@string/textview_author_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>


            <Button
                android:layout_gravity="center"
                android:id="@+id/button_new_verse"
                android:text="@string/button_new_verse"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/button_my_verses"
                android:text="@string/button_my_verses"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/button_favourites"
                android:text="@string/button_favourites"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>


            <Button
                android:layout_gravity="center"
                android:id="@+id/button_published"
                android:text="@string/button_published"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/button_settings"
                android:text="@string/button_settings"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_light"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

        </LinearLayout>

        </HorizontalScrollView>

</ScrollView>