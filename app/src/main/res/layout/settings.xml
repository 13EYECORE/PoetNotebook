<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layout_settings"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bright_green">

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_text_size"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="@string/textview_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout_settings_imagebuttons"
            android:paddingRight="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:paddingBottom="4dp"
                android:layout_gravity="bottom"
                android:id="@+id/imagebutton_left_arrow"
                android:background="@color/bright_green"
                android:src="@drawable/arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="30"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:gravity="right"
                android:id="@+id/textview_current_size"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:paddingBottom="4dp"
                android:layout_gravity="bottom"
                android:id="@+id/imagebutton_right_arrow"
                android:background="@color/bright_green"
                android:src="@drawable/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_text_color"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="@string/textview_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/black">
            </View>

            <View
                android:layout_centerInParent="true"
                android:id="@+id/color_text_rectangle"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:background="@color/black">
            </View>

            </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_background1_color"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="@string/textview_background1_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/black">
            </View>

            <View
                android:layout_centerInParent="true"
                android:id="@+id/color_background1_rectangle"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:background="@color/spring_green">
            </View>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_background2_color"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="@string/textview_background2_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:gravity="right"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/black">
            </View>

            <View
                android:layout_centerInParent="true"
                android:id="@+id/color_background2_rectangle"
                android:layout_width="96dp"
                android:layout_height="36dp"
                android:background="@color/bright_green">
            </View>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_default_settings"
        android:text="@string/button_default_Settings"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_save_settings"
        android:text="@string/button_save_settings"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_light"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"/>

</LinearLayout>